<Window x:Class="Task1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1"
        mc:Ignorable="d"
        Title="{Binding ElementName=ContentFrame, Path=Content.Title}" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Label Content="шапка" Grid.Row="0"/>
        <Label Content="подвал" Grid.Row="2"/>
        <Frame Content="" x:Name="ContentFrame" Grid.Row="1"/>

        <Button x:Name="BackButton" Content="Назад" Grid.Column="0"/>
    </Grid>
</Window>
