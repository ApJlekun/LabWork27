<Page x:Class="Task1.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Task1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Главная">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="AuthorizationButton" Content="Авторизация" Grid.Row="0" Click="AuthorizationButton_Click"/>
        <Button x:Name="RegisrationButton" Content="Регистрация" Grid.Row="1" Click="RegisrationButton_Click"/>
        <Button x:Name="SettingsButton" Content="Настройки" Grid.Row="2"/>

    </Grid>
</Page>
